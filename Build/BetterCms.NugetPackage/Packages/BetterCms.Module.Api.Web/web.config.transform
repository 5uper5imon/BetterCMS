<configuration>
  <location path="bcms-api">
    <system.web>
      <authorization>
        <allow verbs="GET" users="*"/>
        <deny verbs="POST,PUT,DELETE" users="?"/>
      </authorization>
    </system.web>
    <system.webServer>
      <modules runAllManagedModulesForAllRequests="true" />
      <validation validateIntegratedModeConfiguration="false" />
    </system.webServer>
  </location>
</configuration>