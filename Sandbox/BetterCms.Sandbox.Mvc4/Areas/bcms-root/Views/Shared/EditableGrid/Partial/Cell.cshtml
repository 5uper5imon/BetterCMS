@model BetterCms.Module.Root.Mvc.Grids.EditableGridColumn

<td @Html.Raw(Model.Attributes)>
    <!-- ko ifnot: isActive() -->
    <a class="bcms-tables-link" data-bind="text: @(Model.ValueBind)()"></a>
    <!-- /ko -->
    <!-- ko if: isActive() -->
    <input type="text" class="bcms-editor-field-box" data-bind="value: @Model.ValueBind, valueUpdate: 'afterkeydown', enterPress: onSave, escPress: onCancelEdit, event: {blur: onBlurField}, click: onStopEvent @(Model.AutoFocus ? ", hasfocus: isActive()" : "") " />
    <!-- /ko -->
</td>