@using BetterCms.Module.Navigation.Content.Resources
@using BetterCms.Module.Navigation.Controllers
@using BetterCms.Module.Navigation.ViewModels.Sitemap
@using BetterCms.Module.Root.Mvc.Helpers
@using Microsoft.Web.Mvc


<div class="bcms-scroll-window" style="height: 897px;">
    <div class="bcms-columns-container">
        <div class="bcms-leftcol">
            <div class="bcms-sitemap-links-header">
                <div id="bcms-create-link" class="bcms-content-titles">@NavigationGlobalization.Sitemap_EditDialog_AddCustomLink_Header</div>
                <div class="bcms-plain-text">@NavigationGlobalization.Sitemap_EditDialog_AddCustomLink_Text</div>
                <div class="bcms-add-custom-link">
                    <div class="bcms-content-titles">@NavigationGlobalization.Sitemap_EditDialog_AddCustomLink_Title</div>
                    <input type="text" class="bcms-editor-field-box">
                    <div class="bcms-content-titles">@NavigationGlobalization.Sitemap_EditDialog_AddCustomLink_UrlPath</div>
                    <input type="text" class="bcms-editor-field-box">
                </div>
            </div>
            
            <div class="bcms-sitemap-links-holder">
                <div id="bcms-show-links" class="bcms-content-titles">@NavigationGlobalization.Sitemap_EditDialog_AddPageLink_Header</div>
                <div class="bcms-sitemap-links-block" id="bcms-pagelinks-data-bind-container" data-bind="template: { name: 'bcms-navigation-pagelinks-template' }"></div>
            </div>
        </div>
        <div class="bcms-rightcol">
            <div class="bcms-sitemap-holder">
                <div class="bcms-addnode-placement-holder bcms-sitemap-nodes">
                    @* Form is required for unobtrusive validation. *@
                    @using (Html.BeginForm())
                    {
                        @Html.MessagesBox("bcms-messages-box")
                        @Html.Partial("Partial/Sitemap", new SitemapNodeViewModel())
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/html" id="bcms-navigation-pagelinks-template">
    <div class="bcms-sidebar-search">
        <input type="text" class="bcms-editor-field-box" placeholder="@NavigationGlobalization.Sitemap_EditDialog_AddPageLink_SearchPlaceHolder" style="width: 166px;">
        <div class="bcms-btn-search" data-bind="click: searchPageLinks">@NavigationGlobalization.Sitemap_EditDialog_AddPageLink_SearchButton</div>
    </div>
    <div class="bcms-sitemap-nodes" data-bind="template: { name: 'bcms-navigation-pagelink-template', foreach: pageNodes }"></div>
</script>
<script type="text/html" id="bcms-navigation-pagelink-template">
    <div class="bcms-placement-node">
        <div class="bcms-placement-title" data-bind="text: title()"></div>
        <div class="bcms-placement-path" data-bind="text: url()"></div>
    </div>
</script>
