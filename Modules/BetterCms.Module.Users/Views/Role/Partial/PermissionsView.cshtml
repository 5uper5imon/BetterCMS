@model BetterCms.Module.Users.ViewModels.Role.EditRoleViewModel
           
<div class="bcms-permissions-column">
            @for (int i = 0, j =0; i < Model.PermissionsList.Count; i++, j++)
            {
                if (j == 5)
                {
                    j = 0;
                    @:</div>
                    @:<div class="bcms-permissions-column">
                }
                <div class="bcms-edit-check-field">
                    @Html.CheckBoxFor(x => x.PermissionsList[i].IsSelected)
                    @Html.HiddenFor(x=>x.PermissionsList[i].Id)
                    @Html.HiddenFor(x=>x.PermissionsList[i].Name)
                    <div class="bcms-edit-label">@Model.PermissionsList[i].Name</div>
                </div>
            }

        </div>