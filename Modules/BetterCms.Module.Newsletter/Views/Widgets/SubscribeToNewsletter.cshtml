@{
    // SubscriberEmail
    var emailFieldName = ViewBag.BcmsNewsletterSubscribeEmailFieldName;
    // Subscribe to newsletter
    var labelTitle = ViewBag.BcmsNewsletterSubscribeLabelTitle;
    // email...
    var emailFieldPlaceholder = ViewBag.BcmsNewsletterSubscribeEmailFieldPlaceholder;
    // POST
    var formMethod = ViewBag.BcmsNewsletterSubscribeFormMethod;
}

<form method="@formMethod" class="bcms-newsletter-subscribe-label">
    <label class="bcms-newsletter-subscribe-label">@labelTitle</label>
    <input type="email" id="bcms-newsletter-subscribe-email" name="@emailFieldName" class="bcms-newsletter-subscribe-input required" placeholder="@emailFieldPlaceholder" />
    &nbsp;
    <button type="submit" class="bcms-newsletter-subscribe-submit">Submit</button>
</form>