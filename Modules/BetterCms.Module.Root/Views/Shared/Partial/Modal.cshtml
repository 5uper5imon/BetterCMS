@using BetterCms.Module.Root.Content.Resources
<script type="text/html" id="bcms-modal-template">
    <div class="bcms-modal">
    <div class="bcms-modal-body">
        <div class="bcms-modal-header">
            <div class="bcms-modal-title">@RootGlobalization.Message_Loading</div>
            <a class="bcms-modal-close"> </a>
        </div>
        <div class="bcms-modal-content">
            <div class="bcms-modal-content-padded">
                <div style="padding-top: 15px; text-align: center;">@RootGlobalization.Message_Loading</div>
            </div>
        </div>
        <div class="bcms-modal-footer">
            <div class="bcms-btn-small bcms-modal-accept">@RootGlobalization.Button_Save</div>
            <div class="bcms-btn-links-small bcms-modal-cancel">@RootGlobalization.Button_Cancel</div>
            <div class="bcms-modal-cmslogo">Better CMS</div>
