@model BetterCms.Module.Root.Mvc.Grids.EditableGridDropDownColumn

<td @Html.Raw(Model.Attributes)>
    @if (Model.CanBeEdited)
    {
        <!-- ko if: !isActive() || (@(Model.ValueBind).editingIsDisabled && @(Model.ValueBind).editingIsDisabled()) -->
    }
    <div class="bcms-tables-link" data-bind="text: @(Model.ValueTextBind)()"></div>
    @if (Model.CanBeEdited)
    {
        <!-- /ko -->
        <!-- ko if: isActive() && (!@(Model.ValueBind).editingIsDisabled || !@(Model.ValueBind).editingIsDisabled()) -->
        <div class="bcms-field-wrapper">
            <select data-bind="options: @(Model.OptionsBind), optionsText: '@(Model.OptionsText)', optionsValue: '@(Model.OptionsValue)', value: @Model.ValueBind, select2: { minimumResultsForSearch: -1 }"></select>
        </div>
        <!-- /ko -->
    }
</td>
