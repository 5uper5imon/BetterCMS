@model BetterCms.Module.Root.Mvc.Grids.EditableGridDropDownColumn

<td @Html.Raw(Model.Attributes)>
    
        <!-- ko ifnot: isActive() -->
        <a class="bcms-tables-link" data-bind="text: @(Model.ValueTextBind)()"></a>
        <!-- /ko -->
        <!-- ko if: isActive() -->
    <select class="bcms-global-select" data-bind="options: @(Model.OptionsBind),
            optionsText: '@(Model.OptionsText)',
            optionsValue: '@(Model.OptionsValue)',
            value: @Model.ValueBind, 
            click: onStopEvent,
            event: {blur: onBlurField}"></select>
        <!-- /ko -->
</td>