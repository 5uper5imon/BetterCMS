@if (Model.UseMinReferences)
{
    @Html.Partial("Partial/RequireJsReleaseConfig", Model)
}
else
{
    @Html.Partial("Partial/RequireJsDebugConfig", Model)    
}

requirejs(['bcms.jquery', 'bcms', 'bcms.processor'],

    function ($, bcms, processor) {
        'use strict';
        console.log('BetterCMS JS entry point.');

        $(function () {
            bcms.pageId = $('body').data("pageId");
            bcms.securityProfile = $.parseJSON($('#bcms-security-data').html());
            bcms.errorTrace = @(Model.IsDebugMode ? "true" : "false");
            processor.init();
            bcms.init();
            @if (Model.IsDebugMode)
            {
                <text>window.bj = $;</text>
            }
    });
});
