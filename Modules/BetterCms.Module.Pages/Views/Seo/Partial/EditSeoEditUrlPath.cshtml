@using BetterCms.Module.Pages.Content.Resources
@using BetterCms.Module.Root.Content.Resources
@using BetterCms.Module.Root.Mvc.Helpers
@model BetterCms.Module.Pages.ViewModels.Seo.EditSeoViewModel

<div class="bcms-input-list-holder">
    <div class="bcms-content-titles">
        @PagesGlobalization.EditSeo_UrlPath @Html.Tooltip(PagesGlobalization.EditSeo_UrlPath_Tooltip_Description)
        <div class="bcms-editor-link" id="bcms-editseo-editurlpath">@RootGlobalization.Button_Edit</div>
    </div>
    <div class="bcms-editor-path" id="bcms-page-permalink-info">@Html.Raw(string.IsNullOrWhiteSpace(Model.PageUrlPath) ? "&nbsp;" : Html.Encode(Model.PageUrlPath))</div>
    @Html.HiddenFor(f => f.PageUrlPath)

    <div class="bcms-editor-box bcms-js-edit-box" style="display: none;">
        <div class="bcms-field-wrapper">
            @Html.TextBoxFor(f => f.ChangedUrlPath, new { @class = "bcms-field-text bcms-js-url-path" })
            @Html.BcmsValidationMessageFor(f => f.ChangedUrlPath)
        </div>

        <div id="bcms-editseo-editurlpath-save" class="bcms-btn-primary">@RootGlobalization.Button_Ok</div>
        <div id="bcms-editseo-editurlpath-cancel" class="bcms-btn-cancel">@RootGlobalization.Button_Cancel</div>

        <div class="bcms-edit-check-field">
            @Html.CheckBoxFor(f => f.CreatePermanentRedirect)
            <div class="bcms-edit-label">@PagesGlobalization.EditSeo_EditUrlPath_PermanentRedirect</div>
        </div>

        <div class="bcms-edit-check-field">
            @Html.CheckBoxFor(f => f.UseCanonicalUrl)
            <div class="bcms-edit-label">@PagesGlobalization.EditSeo_EditUrlPath_UseCanonicalUrl</div>
        </div>
        @if (Model.IsInSitemap)
        {
            <div class="bcms-edit-check-field">
                @Html.CheckBoxFor(f => f.UpdateSitemap)
                <div class="bcms-edit-label">@PagesGlobalization.EditSeo_EditUrlPath_UpdateSitemap</div>
            </div>
        }
    </div>
</div>
