@using BetterCms.Module.Pages.Content.Resources
@using BetterCms.Module.Root.Content.Resources
@using BetterCms.Module.Root.Mvc.Helpers
@model BetterCms.Module.Pages.ViewModels.Page.EditPagePropertiesViewModel

<div class="bcms-input-list-holder">
    <div class="bcms-content-titles">
        @PagesGlobalization.EditPageProperties_AdvancedPropertiesTab_PageUrl_Title @Html.Tooltip(PagesGlobalization.EditPageProperties_AdvancedPropertiesTab_PageUrl_Tooltip_Description)
        <div class="bcms-editor-link" id="bcms-pageproperties-editpermalink">@RootGlobalization.Button_Edit</div>
    </div>
    <div class="bcms-editor-path" id="bcms-page-permalink-info">@(string.IsNullOrWhiteSpace(Model.PageUrl) ? Html.Raw("&nbsp;") : new MvcHtmlString(Html.Encode(Model.PageUrl)))</div>

    <div class="bcms-editor-box bcms-js-edit-box" style="display: none;">
        @Html.Hidden("PagePermalinkHidden", Model.PageUrl, new { @id = "bcms-page-permalink" })
        <div class="bcms-field-wrapper">
            @Html.TextBoxFor(model => model.PageUrl, new { @id = "bcms-page-permalink-edit", @class = "bcms-field-text bcms-js-url-path" })
            @Html.BcmsValidationMessageFor(f => f.PageUrl)
        </div>

        <div class="bcms-btn-primary" id="bcms-save-permalink">@RootGlobalization.Button_Ok</div>
        <div class="bcms-btn-cancel">@RootGlobalization.Button_Cancel</div>

        <div class="bcms-checkbox-holder">
            @Html.CheckBoxFor(model => model.RedirectFromOldUrl)
            <div class="bcms-checkbox-label bcms-js-edit-label">@PagesGlobalization.EditPageProperties_AdvancedPropertiesTab_CreatePermanentRedirectToOldUrl_Title</div>
        </div>

        <div class="bcms-checkbox-holder">
            @Html.CheckBoxFor(model => model.UseCanonicalUrl)
            <div class="bcms-checkbox-label bcms-js-edit-label">@PagesGlobalization.EditPageProperties_AdvancedPropertiesTab_UseCanonicalUrl</div>
        </div>

        @if (Model.IsInSitemap)
        {
            <div class="bcms-checkbox-holder">
                @Html.CheckBoxFor(model => model.UpdateSitemap)
                <div class="bcms-checkbox-label bcms-js-edit-label">@PagesGlobalization.EditPageProperties_AdvancedPropertiesTab_UpdateSitemap_Title</div>
            </div>
        }
    </div>
</div>
