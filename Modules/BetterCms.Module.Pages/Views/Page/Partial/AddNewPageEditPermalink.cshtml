@using BetterCms.Module.Pages.Content.Resources
@using BetterCms.Module.Root.Content.Resources
@using BetterCms.Module.Root.Mvc.UI

@model BetterCms.Module.Pages.ViewModels.Page.AddNewPageViewModel

<div class="bcms-input-list-holder">
    @Html.Tooltip(PagesGlobalization.AddNewPage_Permalink_Tooltip_Title, PagesGlobalization.AddNewPage_Permalink_Tooltip_Description)
    <div class="bcms-content-titles">@PagesGlobalization.AddNewPage_Permalink<a id="bcms-addnewpage-editpermalink">@RootGlobalization.Button_Edit</a></div>
    <div class="bcms-editseo-urlpath" id="bcms-page-permalink-info">@(string.IsNullOrWhiteSpace(Model.PagePermalink) ? Html.Raw("&nbsp;") : new MvcHtmlString(Html.Encode(Model.PagePermalink)))</div>
</div>

<div class="bcms-edit-urlpath-box" style="display: none;">
    <a class="bcms-edit-btn-close">@PagesGlobalization.EditSeo_EditUrlPath_Close</a>

    @Html.Tooltip(PagesGlobalization.AddNewPage_EditPermalink_Tooltip_Title, PagesGlobalization.AddNewPage_EditPermalink_Tooltip_Description)    
    @Html.Hidden("PagePermalinkHidden", Model.PagePermalink, new { @id = "bcms-page-permalink" })

    <div class="bcms-content-titles">@PagesGlobalization.AddNewPage_EditPermalink_Title</div>
    @Html.TextBoxFor(model => model.PagePermalink, new { @id = "bcms-page-permalink-edit", @class = "bcms-editor-field-box", @style = "width: 503px;" })
    
    <div class="bcms-btn-small" id="bcms-save-permalink">@RootGlobalization.Button_Ok</div>
</div>
