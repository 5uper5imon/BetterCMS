@using BetterCms.Core.DataContracts.Enums
@using BetterCms.Module.Root.Content.Resources

@model string
@if (Model == ContentStatus.Published.ToString())
{
    <div class="bcms-action-ok bcms-js-action-ok">@RootGlobalization.WidgetStatus_Published</div>
}
else if (Model == ContentStatus.Draft.ToString())
{
    <div class="bcms-action-draft">@RootGlobalization.WidgetStatus_Draft</div>
}
else
{
    <div class="bcms-action-draft">@RootGlobalization.WidgetStatus_PublishedWithDraft</div>
}