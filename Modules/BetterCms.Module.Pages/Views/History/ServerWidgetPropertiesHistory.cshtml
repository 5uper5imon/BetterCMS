@using BetterCms.Module.Pages.Content.Resources
@model BetterCms.Module.Pages.ViewModels.History.ServerWidgetHistoryViewModel

<div class="bcms-form-block-holder">
    <div>
        <div class="bcms-input-list-holder">
            <div class="bcms-content-titles">@PagesGlobalization.Widget_Title_Title</div>
            <div class="bcms-field-wrapper">
                @Html.TextBoxFor(model => model.Name, new { @readonly = "readonly", @class = "bcms-field-text" })
            </div>
        </div>

        <div class="bcms-input-list-holder">
            <div class="bcms-content-titles">@PagesGlobalization.Widget_Url_Title</div>
            <div class="bcms-field-wrapper">
                @Html.TextBoxFor(model => model.Url, new { @readonly = "readonly", @class = "bcms-field-text" })
            </div>
        </div>

        <div class="bcms-input-list-holder">
            <div class="bcms-content-titles">@PagesGlobalization.WidgetPreviewImageUrl_Title</div>
            <div class="bcms-field-wrapper">
                @Html.TextBoxFor(model => model.PreviewUrl, new { @readonly = "readonly", @class = "bcms-field-text" })
            </div>
        </div>
    </div>

    <div>
        <div class="bcms-input-list-holder">
            <div class="bcms-content-titles">@PagesGlobalization.WidgetPreviewImage_Title</div>
            <div class="bcms-preview-module-image">
                @if (!string.IsNullOrWhiteSpace(Model.PreviewUrl))
                {
                    <img id="bcms-widget-preview-image" src="@Model.PreviewUrl" alt="" />
                }
                else
                {
                    <svg class="bcms-grid-no-preview" width="50" height="50" viewBox="-205 372 50 50" enable-background="new -205 372 50 50">
                        <g fill="#cdcdcd">
                            <path d="m-205 422h50v-50h-50v50m2-48h46v46h-46v-46" />
