@using BetterCms.Module.Pages.Content.Resources
@using BetterCms.Module.Root.Mvc.Helpers
@model BetterCms.Module.Pages.ViewModels.History.ContentHistoryViewModel

@Html.MessagesBox()
<div class="bcms-tab-header bcms-js-tab-header">
    <div class="bcms-modal-frame-holder">
        <div class="bcms-tab-ui bcms-tab-item bcms-active" data-name="#bcms-tab-1">@PagesGlobalization.ContentHistory_ContentTab_Title</div>
        <div class="bcms-tab-ui bcms-tab-item" data-name="#bcms-tab-2">@PagesGlobalization.ContentHistory_PropertiesTab_Title</div>
    </div>
</div>

<div class="bcms-modal-frame-holder">
    <div id="bcms-tab-1" class="bcms-tab-single">
        <div class="bcms-history-preview-holder" id="bcms-history-preview">
            <div class="bcms-history-info" style="display: block;">@PagesGlobalization.ContentHistory_SelectVersionToPreviewMessage</div>
        </div>
    </div>

    <div id="bcms-tab-2" class="bcms-tab-single">
        <div class="bcms-history-preview-data" id="bcms-history-preview-properties">
            <div class="bcms-history-info" style="display: block;">@PagesGlobalization.ContentHistory_SelectVersionToPreviewMessage</div>
        </div>
    </div>
    <div class="bcms-history-table-holder">
        @Html.Partial("ContentHistoryTable", Model)
    </div>
</div>

<script type="text/html" id="bcms-history-preview-template">
    <iframe src="" style="width: 100%; height: 100%; border: 0px;"></iframe>
</script>
